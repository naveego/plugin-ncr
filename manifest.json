{
  "id": "plugin-ncr",
  "displayName": "NCR",
  "description": "Plugin for integrating data with NCR",
  "apiVersion": "2",
  "versionDescription": "Version 1",
  "version": "1.0.0",
  "iconFile": "icon.jpg",
  "executable": "PluginNCR",
  "kind": "publisher",
  "os": "$GOOS",
  "arch": "$GOARCH",
  "canConfigure": true,
  "canProduceMultipleSchemas": true,
  "canAcceptQueryBasedSchemas": false,
  "canUseOAuth": false,
  "canWrite": false,
  "configSchema": {
    "ui": {
      "ui:order": [
        "ProvUsername",
        "ProvPassword",
        "NepApplicationKey",
        "NepOrganization",
        "NepCorrelationId",
        "QueryStartDate"
      ],
      "ProvPassword": 
      {
        "ui:widget": "password"
      }
    },
    "schema": {
      "type": "object",
      "properties": {
        "ProvUsername" : {
          "type": "string",
          "title": "Username",
          "description": "NCR tenant username."
        },
        "ProvPassword" : {
          "type": "string",
          "title": "Password",
          "description": "NCR tenant password."
        },
        "NepApplicationKey" : {
          "type": "string",
          "title": "NEP Application Key",
          "description": "Application key found within NCR documentation."
        },
        "NepOrganization" : {
          "type": "string",
          "title": "NEP Organization",
          "description": "Provided by tenant."
        },
        "NepCorrelationId" : {
          "type": "string",
          "title": "Nep Correlation ID",
          "description": "NEP Correlation ID. Example: \"Test\"."
        },
        "QueryStartDate" : {
          "type": "string",
          "title": "Query Start Date",
          "description": "The date to be used as the starting point for historical data. Format example: yyyy-MM-dd"
        }
      },

      "required": [
        "ProvUsername",
        "ProvPassword",
        "NepApplicationKey",
        "NepOrganization",
        "NepCorrelationId",
        "QueryStartDate"
      ]
    }
  }
}